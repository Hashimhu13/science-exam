{
  "version": 2,
  "builds": [
    {
      "src": "*.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/images/(.*)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "dest": "/images/$1"
    },
    {
      "src": "/(.*)\\.js",
      "headers": { "cache-control": "public, max-age=0, must-revalidate" },
      "dest": "/$1.js"
    },
    {
      "src": "/(.*)\\.css",
      "headers": { "cache-control": "public, max-age=0, must-revalidate" },
      "dest": "/$1.css"
    },
    {
      "src": "/(.*)",
      "headers": { "cache-control": "public, max-age=0, must-revalidate" },
      "dest": "/index.html"
    }
  ]
}
